{
  "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "x64",
      "displayName": "x64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/pisense-x64"
    },
    {
      "name": "arm64",
      "displayName": "arm64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/pisense-arm64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/aarch64-linux-gnu.toolchain.cmake",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-x64",
      "configurePreset": "x64"
    },
    {
      "name": "build-arm64",
      "configurePreset": "arm64"
    }
  ]
}
